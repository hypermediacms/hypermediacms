<htx:type>recipe</htx:type>
<htx:status>published</htx:status>
<htx:order>newest</htx:order>
<htx:howmany>20</htx:howmany>

<htx>
  <div style="margin-bottom: 1.5rem;">
    <h1>Recipes</h1>
    <p class="lead">Delicious dishes with nested ingredients and steps.</p>
  </div>

  <div class="grid">
    <htx:each>
      <article class="card recipe-card">
        <h2><a href="/recipes/__slug__" hx-get="/recipes/__slug__" hx-target="main" hx-push-url="true">__title__</a></h2>
        <div class="recipe-meta">
          {{ if prep_time }}
            <span>ğŸ• Prep: __prep_time__ min</span>
          {{ endif }}
          {{ if cook_time }}
            <span>ğŸ”¥ Cook: __cook_time__ min</span>
          {{ endif }}
          {{ if servings }}
            <span>ğŸ½ï¸ Serves: __servings__</span>
          {{ endif }}
        </div>
        <p>__body__</p>
      </article>
    </htx:each>
  </div>
  
  <htx:none>
    <div class="card" style="text-align: center; color: #666; padding: 3rem;">
      <h3 style="margin-bottom: 0.5rem;">No recipes yet</h3>
      <p>Create your first recipe in the <a href="/admin" style="color: #1a1a2e; font-weight: 600;">admin panel</a>.</p>
    </div>
  </htx:none>
</htx>

<style>
  .lead { color: #666; margin-bottom: 1rem; font-size: 1.1rem; }
  .recipe-card h2 { margin-bottom: 0.5rem; font-size: 1.25rem; }
  .recipe-card h2 a { text-decoration: none; }
  .recipe-card h2 a:hover { text-decoration: underline; }
  .recipe-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 0.75rem;
  }
</style>
